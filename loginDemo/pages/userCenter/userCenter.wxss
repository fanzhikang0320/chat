/* pages/userCenter/userCenter.wxss */
.container {
  width: 100%;
  height: 100%;
  background-color: rgb(52, 191, 255);
}
.page-area {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  width: 90%;
  background-color: white;
  border-radius: 10rpx;
}

.page-area image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.page-section {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 30rpx;
}
