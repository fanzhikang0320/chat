.page-section {
  position: relative;
  width: 90%;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 10rpx; 
  padding: 10rpx 0;
  margin: 4%;
}
.item-name {
  font-size: 30rpx;
  margin: 10rpx 0 10rpx 30rpx;
}
.img {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 0 10rpx 30rpx;
}
.fabu {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 60rpx;
  right: 30rpx;
}
.delete {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 40rpx;
}



