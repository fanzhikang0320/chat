/* pages/index/index.wxss */
.container{
  align-items: flex-start;
}
.music-category-text{
  font-size: 38rpx;
  line-height: 30rpx;
}
.big-photo-list{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.big-photo-item{
  width: 280rpx;
  display: flex;
  flex-direction: column;
  padding: 5rpx 0;
}
.photo{
  width: 280rpx;
  height: 280rpx;
  border-radius: 5rpx;
} 
.music-name{
  font-size: 24rpx;
  line-height: 32rpx;
  white-space: nowrap;
  text-overflow:  ellipsis;
}
.music-author{
 font-size: 24rpx;
  color: #bbb;
  line-height: 32rpx;
}
.music-group-selector{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 10rpx 0rpx;
}
.music-group-selector-text{
  font-size: 38rpx;
}
.music-group-selector-arr{
  width: 60rpx;
  height: 60rpx;
}


