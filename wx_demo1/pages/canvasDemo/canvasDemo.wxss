/* pages/canvasDemo/canvasDemo.wxss */
.container{
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0;
}
page{
  height: 100%;
}
.canvas-area{
  width: 100%;
  height: 100%;
  background-color: #e6dcdc;
}
.myCanvas{
  width: 100%;
  height: 100%;
}
.canvas-tools{
  position: fixed;
  left: 0;
  bottom: 20rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: rgb(161, 238, 161);
}
.box{
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
  background-color: #f49;
  line-height: 100rpx;
  text-align: center;
  font-size: 35rpx;
}
.box1{
  background-color: rgb(90, 189, 255);
}
.box2{
  background-color: rgb(52, 248, 134);
}
.box3{
  background-color: rgb(250, 70, 70);
}
.box4{
  background-color: rgb(252, 255, 51);
}
.box5{
  background-color: rgb(219, 219, 219);
}