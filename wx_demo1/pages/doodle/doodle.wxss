/* pages/doodle/doodle.wxss */

page{
  width: 100%;
  height: 100%;
  padding: 0;
}
.container{
  width: 100%;
  height: 100%;
  position: relative;
  padding: 0;
}

.canvas_area{
  width: 100%;
  height: 100%;
  background-color: rgb(110, 163, 243)
}
.myCanvas{
  width: 100%;
  height: 100%;
}
.canvas_tools{
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.box{
  width: 100rpx;
  height: 100rpx;
  background-color: rgb(93, 224, 31);
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}
.box3{
  background-color: #f054b4;
}
.box4{
  background-color: #ec2863;
}