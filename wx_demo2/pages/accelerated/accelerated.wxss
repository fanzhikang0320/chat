.btn-test {
  position: absolute;
  bottom: 0;
  margin: 2rem;
  left: 50%;
  transform: translateX(-50%);
}
.panel-bottom {
  width: 100%;
  position: absolute;
  top: 5rem;
  color: white;
  text-align: center;
}
.img-loading {
  width: 1.5rem;
  height: 1.5rem;
}




