/* pages/index/index.wxss */
/* 顶部搜索栏 */
.container{
  background-color: rgb(246,246,246);
}

.search-container{
  width: 100%;
  height: 80rpx;
  display: flex;
  background-color:rgb(200, 37, 25); 
   align-items: center; 
}

.search-container .search-left{
  width: 90rpx;
  height: 90%;
  background-color: wheat;
  display: flex;
}

.search-container .search-left .search-menu-icon{
}
.search-container .search-left .jd-icon{
}

.search-container .search-center{
  width: 100%;
  height: 90%;
  display: flex;
  align-items: center;
}

.search-container .search-center .search-center-container{
  width: 100%;
  height: 55rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 30rpx;
  font-size: 25rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.search-container .search-center .jd-icon{
  width: 40rpx;
  height: 40rpx;
  background-color: wheat;
  margin-left: 30rpx;
}
.search-container .search-center .jd-icon::after{
  content: '|';
  color: #666;
  display: inline-block;
  position: relative;
  left: 55rpx;
  top: 0rpx;
}
.search-container .search-center .search-icon{
  width: 33rpx;
  height: 33rpx;
  background-color: wheat;
  margin-left: 40rpx;
}
.search-container .search-center .search-input{
  width: 400rpx;
  box-sizing: border-box;
  margin-left: 15rpx;
  
}


.search-container .search-right{
  width: 90rpx;
  
  height: 90%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search-container .search-right .login{
  height: 55rpx;
  line-height: 55rpx;
  color: #fff;
}



/* 轮播图区域 */

.swiper-container{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  background-color: rgb(246,246,246);
  position: relative;
}
.swiper-container .swiper-bg{
  position: absolute;
  width: 100%;
  height: 180rpx;
 background-color:rgb(234, 65, 67);
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}
.swiper-container swiper{
  width: 96%;
  height: 100%;
}
.swiper-container .nav{
  width: 100%;
  height: 100%;
}
.swiper-container .nav image{
  width: 100%;
  height: 100%;
}






/* 动态导航栏 */
.nav-container{
   background-color: rgb(246,246,246);
  margin-top: 15rpx;
}
.nav-box{
  height: 350rpx;
}
.menuWrap{
  display: flex;
  flex-wrap: wrap;
}
 .menuWrap .menu-item{
  font-family: '微软雅黑';
  font-size: 26rpx;
  width: 150rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  padding: 10rpx 0rpx;
  color: #333;
} 
.menuWrap .menu-item navigator{
  text-align: center;
}
.menuWrap .menu-item image{
  width: 90rpx;
  height: 90rpx;
}
/* 京东秒杀 */

.seckill-container{
  width: 95%;
  height: 350rpx;
  margin: auto;
  border-radius:15rpx; 
   background-color: #fff;
}
.seckill-container .seckill-top-box{
  width: 100%;
  height: 60rpx;
  background-color: blue;
}
.seckill-container scroll-view .scroll-view-inner-container{
  display: flex; 

  white-space: nowrap;
  height: 100%;
}
.seckill-container .seckill-thing{
   height: 100%;
  background-color: white;
  margin:0rpx 10rpx;
}

.seckill-container .seckill-thing image{
  width: 100%;
  height: 150rpx;
}
.seckill-container .seckill-thing .new-price-box{
  display: flex;
  width: 140rpx;
  color: rgb(234, 65, 67);
  font-weight: bolder;
  align-items: flex-end;
  justify-content: center;
}
.seckill-container .seckill-thing .new-price-box .money-symbol{
  font-size: 28rpx;
}
.seckill-container .seckill-thing .new-price-box .new-price{
  font-size: 35rpx;
}

.seckill-container .seckill-thing .old-price{
  color: rgb(153, 153, 153);
  font-size: 28rpx;
  text-align: center;
}
.seckill-container .seckill-thing .old-price .border{
  width: 60%;
  height: 2rpx;
  background-color: rgb(153, 153, 153);
  position: relative;
  top: -18rpx;
  left: 50%;
  transform: translateX(-50%);
}


/* 底部导航栏 */
.bottom-nav-container{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 85rpx;
  background-color: pink;
  display: flex;
  justify-content: space-around;
}
.bottom-nav-container image{
width: 120rpx;
height: 100%;
}
